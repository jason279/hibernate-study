<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">

	<class name="jason.self.fms.service.rule.rule.Severity" table="rule_severity"
		lazy="false">
		<id name="mId" type="string" column="id" length="200">
			<generator class="uuid" />
		</id>
		<discriminator column="type" type="string" />

		<property name="mSeverityLevel">
			<column name="severity_level" />
		</property>

		<property name="mDisabled">
			<column name="is_disabled" />
		</property>

		<component name="mMessage"
			class="jason.self.fms.service.rule.expression.Message">
			<property name="mName" column="message_name" />
			<property name="mText" column="message_text" type="text"
				length="65535" />
		</component>

		<subclass name="jason.self.fms.service.rule.rule.ConditionalSeverity"
			discriminator-value="CONDITIONAL">
			<component name="mCondition"
				class="jason.self.fms.service.rule.expression.Condition">
				<property name="mName" column="condition_name" />
				<property name="mText" column="condition_text" type="text"
					length="65535" />
			</component>
		</subclass>

		<subclass name="jason.self.fms.service.rule.rule.UnconditionalSeverity"
			discriminator-value="UNCONDITIONAL"></subclass>

	</class>

</hibernate-mapping>
